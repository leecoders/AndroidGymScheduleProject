<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:orientation="vertical"
    android:padding="3dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorSalmon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/back2"
                android:drawableLeft="@drawable/ic_live_help_black_24dp"
                android:drawableStart="@drawable/ic_live_help_black_24dp"
                android:padding="5dp"
                android:text="어플리케이션 정보"
                android:textSize="17dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round"
                android:drawableLeft="@drawable/ic_public_black_24dp"
                android:drawableStart="@drawable/ic_public_black_24dp"
                android:padding="5dp"
                android:text="개발팀 - [FOSSIL]"
                android:textColor="#000000"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round"
                android:drawableLeft="@drawable/ic_build_black_24dp"
                android:drawableStart="@drawable/ic_build_black_24dp"
                android:padding="5dp"
                android:text="개발자 - 황다현 , 이재민"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:drawableLeft="@drawable/ic_security_black_24dp"
                android:drawableStart="@drawable/ic_security_black_24dp"
                android:padding="5dp"
                android:text="Q/A - 카톡 [ kjg123kg , me2in ] "
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_event_note_black_24dp"
                android:drawableStart="@drawable/ic_event_note_black_24dp"
                android:padding="5dp"
                android:text="[FOSSIL]팀원 소개"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/ptListView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:dividerHeight="0dp"
                android:padding="5dp" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>