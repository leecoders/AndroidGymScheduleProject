<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hdh.smgproject.UserInfoChange">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="회원 정보 변경"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSalmon"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="ID "
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <EditText
                    android:maxLength="15"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:hint="userID"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:id="@+id/idText"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_button_gray"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                    <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="PW"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <EditText
                    android:maxLength="15"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호(최대15자)"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:id="@+id/passwordText"
                    android:drawableStart="@drawable/ic_https_black_24dp"
                    android:drawableLeft="@drawable/ic_https_black_24dp"
                    android:background="@drawable/round"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="NAME"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <EditText
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:hint="이름(최대15자)"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:id="@+id/nameText"
                    android:background="@drawable/round"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="EMAIL"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <EditText
                    android:maxLength="20"
                    android:privateImeOptions="defaultInputmode=english"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:hint="이메일"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:id="@+id/emailText"
                    android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                    android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                    android:background="@drawable/round"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Gender"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <RadioGroup
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/genderGroup"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="여성"
                        android:id="@+id/genderWoman"
                        android:layout_weight="1"
                        android:checked="true"/>

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="남성"
                        android:id="@+id/genderMan"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp">


            <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="Height"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <EditText
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:hint="키(cm)"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round"
                    android:id="@+id/heightText"/>

            <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="Weight"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <EditText
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="몸무게(kg)"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round"
                    android:id="@+id/weightText"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="Age"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <EditText
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="나이"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:background="@drawable/round"
                    android:id="@+id/ageText"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="ptcount"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/ptIDText"/>
                <EditText
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:background="@drawable/round"
                    android:id="@+id/ptNUmEdit"/>

            </LinearLayout>
            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/round_button"
                android:text="변경하기"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/changeButton"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
